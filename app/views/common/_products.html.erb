<div  id="pins" class="transitions-enabled">
  <% @products.each do |product| %>

      <div class="box panel panel-default">
        <%= link_to product_path(product) do %>
          <% if product.main_product_image.present? %>
            <%= image_tag(product.main_product_image.image.url, alt: product.title) %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
          <% end %>
          <div class="caption">
            <h4><%= link_to product.title, product_path(product), class: 'title' %></h4>
            <p><strong>现价：¥<%= product.price %></strong> <span class="msrp">原价：¥<%= product.msrp %></span></p>
            <p><%= show_add_to_cart product, html_class: "btn-xs" %></p>
          </div>
        <% end %>
      </div>

  <% end %>
</div>
